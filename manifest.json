{
  "manifest_version": 2,

  "name": "Transaction Point Helpers",
  "description": "This extension adds a few tools to transaction point processes",
  "version": "1.0",

  "browser_action": {
    "name": "Transaction Point Helpers", 
    "icons": ["img/icon.png"],
    "default_icon": "img/icon.png"
   }, 

   "content_scripts": [
    {
      "matches": [
        "https://trpoint.com/*"
      ],
      "js": ["js/jquery-3.5.1.min.js", "js/transactionPointSiteLocation.js", "js/flashDrive.js"]
    }
  ]
}